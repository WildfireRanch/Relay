{
  "compilerOptions": {
    // ========= ECMAScript Target & Modules =========
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],

    // ========= Core TypeScript Behavior =========
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "skipLibCheck": true,

    // ========= Module Resolution =========
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "isolatedModules": true,

    // ========= JS/TS Interop =========
    "allowJs": false, // âœ… If you're not mixing JS + TS (recommended)

    // ========= JSX Behavior for Next.js =========
    "jsx": "preserve",

    // ========= Path Aliases =========
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@/components": ["./src/components/index.ts"],
      "@/components/*": ["./src/components/*"],
      "@/components/Codex": ["./src/components/Codex/index.ts"],
      "@/components/ui/*": ["./src/components/ui/*"],
      "@/lib/*": ["./src/lib/*"]
    },

    // ========= Next.js Plugin =========
    "plugins": [{ "name": "next" }]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "types/**/*.d.ts"
  ],
  "exclude": ["node_modules", "tests/**/*"]
}
