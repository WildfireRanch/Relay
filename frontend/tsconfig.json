{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,

    // ðŸ”— ALIASES
    "baseUrl": ".", 
    "paths": {
      "@/*": ["src/*"],                           // âœ… @/lib/api â†’ src/lib/api
      "@components/*": ["src/components/*"],      // âœ… Optional shortcut
      "@puck": ["src/app/editor/puck.config.tsx"] // âœ… For config import
    },

    // ðŸ“¦ Plugins (picked up by Next.js automatically)
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "types/**/*.d.ts"
  ],
  "exclude": ["node_modules"]
}
